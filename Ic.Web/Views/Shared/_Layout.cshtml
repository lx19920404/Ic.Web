<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <environment names="Development">
        <link rel="stylesheet" href="~/css/layout.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/layui/css/layui.css" />
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
        <script type="text/javascript" src="~/lib/layui/layui.js"></script>
        <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>


    <title>@ViewBag.Title - My ASP.NET Application</title>
</head>
<body>
    <div>
        <header>
            <h1>ASP.NET MVC Sample App</h1>
        </header>
        <div>
            <ul class="layui-nav" lay-filter="">
                <li class="layui-nav-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="layui-nav-item">
                    <a href="#">ViewsDemo</a>
                    <dl class="layui-nav-child">
                        <dd><a asp-controller="ViewsDemo" asp-action="LayoutSample">Layout Sample</a></dd>
                        <dd><a asp-controller="ViewsDemo" asp-action="LayoutUsingSections">Layout Using Sections</a></dd>
                        <dd><a asp-controller="ViewsDemo" asp-action="PassingAModel">Passing a model</a></dd>
                        <dd><a asp-controller="ViewsDemo" asp-action="UseAPartialView1">Use a partial view 1</a></dd>
                        <dd><a asp-controller="ViewsDemo" asp-action="UseAPartialView2">Use a partial view 2</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item">
                    <a href="#">HTMLHelpers</a>
                    <dl class="layui-nav-child">
                        <dd><a asp-controller="HTMLHelpers" asp-action="Display">Display</a></dd>
                        <dd><a asp-controller="HTMLHelpers" asp-action="HelperList">HelperList</a></dd>
                        <dd><a asp-controller="HTMLHelpers" asp-action="HelperWithMenu">HelperWithMenu</a></dd>
                        <dd><a asp-controller="HTMLHelpers" asp-action="StronglyTypedMenu">StronglyTypedMenu</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item">
                    <a asp-controller="TagHelpers" asp-action="Index">TagHelpers</a>
                    <dl class="layui-nav-child">
                        <dd><a asp-controller="TagHelpers" asp-action="LabelHelper">LabelHelper</a></dd>
                        <dd><a asp-controller="TagHelpers" asp-action="FormHelper">FormHelper</a></dd>
                        <dd><a asp-controller="TagHelpers" asp-action="CustomHelper">CustomHelper</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item">
                    <a asp-controller="Events" asp-action="Index">Events</a>
                </li>
                <li class="layui-nav-item"><a href="#">Demo</a></li>
                <li class="layui-nav-item"><a href="#">About</a></li>
            </ul>
        </div>
        <br />
        <h3></h3>
        <div>
            @RenderSection("PageNavigation", required: false)
        </div>
        <div>
            @RenderBody()
        </div>
        <hr />
        <script>
            //注意：导航 依赖 element 模块，否则无法进行功能性操作
            layui.use('element', function () {
                var element = layui.element;

                //…
            });
        </script>
        <footer>
            <p>
                <div>Sample Code for Professional C#</div>
                # @DateTime.Now.Year - My ASP.NET Application
            </p>
        </footer>
    </div>
</body>
</html>
